---


const { items } = Astro.props;
---

<section class="py-10">
    <div class="flex overflow-x-auto gap-4 px-4 ">
        {items?.map((item: { img: string; titre: string; description: string }) => (
            <div class="min-w-[300px] bg-white rounded-lg shadow-lg p-4" style={`background-image: url(${item.img}); background-size: cover;`}>
                <div class=" bg-opacity-50 p-4 text-white">
                    <h3 class="text-xl font-bold">{item.titre}</h3>
                    <p>{item.description}</p>
                </div>
            </div>
        ))}
    </div>
</section>
