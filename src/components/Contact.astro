<div class="container px-4 mx-auto">
  <div class="mx-auto">
    <div class="max-w-md mx-auto px-8 py-6 bg-cyan-800 rounded-lg shadow-lg">
      <h2 class="text-2xl font-semibold mb-4 text-white">Contactez-nous</h2>
      <form>
        <div class="mb-4 text-white">
          <label class="block  mb-1" for="name">Votre nom</label>
          <input
            class="w-full px-4 py-2 bg-cyan-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-600 transition duration-300"
            placeholder="Ex: John Doe"
            type="text"
          />
        </div>
        <div class="mb-4 text-white">
          <label class="block mb-1" for="email">Votre Mail</label>
          <input
            class="w-full px-4 py-2 bg-cyan-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-600 transition duration-300"
            placeholder="Ex: johndoe@example.com"
            name="email"
            id="email"
            type="email"
          />
        </div>
        <div class="mb-4 text-white">
          <label class="block mb-1" for="message"
            >Votre message</label
          >
          <textarea
            class="w-full px-4 py-2 bg-cyan-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-600 transition duration-300"
            rows="4"
            placeholder="Entrez votre message ici"
            name="message"
            id="message"
          ></textarea>
        </div>
        <button
          class="w-full bg-cyan-950 py-2 px-4 rounded-lg hover:bg-cyan-700 transition duration-300 text-white"
          type="submit"
        >
          Envoyer
        </button>
      </form>
    </div>
  </div>
</div>
