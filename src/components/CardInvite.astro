    <div class="flex flex-col gap-4">
      <div class="flex flex-row justify-between">
        <div class="flex flex-col">
          <span class="text-xl font-bold">{items.prenom} {items.nom}</span>
          <br>
          <p class="text-xs text-gray-700">{items.biographie}</p>
        </div>
        <span class="font-bold  text-cyan-900">{items.role}</span>
      </div>
      <button class="hover:bg-sky-700 text-gray-50 bg-cyan-700 py-2">{items.email}</button>
    </div>
  </div>